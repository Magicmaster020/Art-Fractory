<?xml version="1.0" encoding="UTF-8"?>

<?import com.thefractory.customcomponents.Gradient?>
<?import com.thefractory.customcomponents.IconButton?>
<?import com.thefractory.customcomponents.NumberField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root fillWidth="false" spacing="5.0" type="VBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Gradient fx:id="gradient">
         <VBox.margin>
            <Insets left="9.0" right="9.0" />
         </VBox.margin></Gradient>
      <AnchorPane fx:id="colorArrowContainer" onMousePressed="#newColorArrow" />
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Label text="Location:" />
                  <NumberField fx:id="positionField" ghostText="Location" max="1.0" />
               </children>
            </HBox>
            <ColorPicker fx:id="firstColorPicker" />
            <IconButton fx:id="removeSelectedArrow" iconLocation="close" onAction="#removeSelectedArrow" />
         </children>
      </HBox>
      <HBox spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#newColorArrow" text="New Color Arrow" />
            <Button mnemonicParsing="false" onAction="#reverse" text="Reverse" />
         </children>
      </HBox>
   </children>
</fx:root>
