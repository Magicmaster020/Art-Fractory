<?xml version="1.0" encoding="UTF-8"?>

<?import com.thefractory.customcomponents.Gradient?>
<?import com.thefractory.customcomponents.NumberField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="controlPanel" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="5.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label minWidth="-Infinity" prefWidth="800.0" text="Congratulations! You managed to change tab and are now creating a Hofstadters Butterfly artwork " wrapText="true" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <NumberField fx:id="latticePoints" ghostText="Y Coordinate" max="10000.0" min="1" prefWidth="120.0" intField = "true" onKeyPressed="#changeNumberOfLatP"/>
            <VBox fx:id="gradients" spacing="3.0">
               <children>
                  <Gradient fx:id="pink" onMouseClicked="#changeGradient">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Gradient>
                  <Gradient gradientLocation="coral" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="sea" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="starry sky" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="forrest" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="fire" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="sunset" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="rainbow" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="rainbow step" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="pale rainbow" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="black and white" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="black and white step" onMouseClicked="#changeGradient" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
