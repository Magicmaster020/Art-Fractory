<fx:root type="GridPane" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <AnchorPane fx:id="previewPane" style="-fx-border-color: black;">
         <children>
            <ImageView fx:id="preview" fitHeight="437.0" fitWidth="437.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" rotate="-90.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <image>
                  <Image url="@Blue%20Eyes%20White%20Dragon.png" />
               </image>
            </ImageView>
            <Region fx:id="shadeTop" layoutX="67.0" layoutY="100.0" opacity="0.5" prefHeight="100.0" style="-fx-background-color: black;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <Region fx:id="shadeBottom" opacity="0.5" prefHeight="100.0" style="-fx-background-color: black;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
         </children>
      </AnchorPane>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.rowIndex="1">
         <children>
            <VBox spacing="10.0">
               <children>
                  <GridPane hgap="5.0" vgap="5.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" />
                      <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" />
                      <RowConstraints vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <VBox spacing="5.0" GridPane.rowIndex="1">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <Label text="Y Coordinate" />
                                    <InfoIcon fx:id="yInfo" />
                                 </children>
                              </HBox>
                              <NumberField fx:id="yField" ghostText="Y Coordinate" max="1000000.0" min="-1000000.0" prefWidth="120.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <Label text="X Coordinate" />
                                    <InfoIcon fx:id="xInfo" />
                                 </children>
                              </HBox>
                              <NumberField ghostText=" X Coordinate" max="100000.0" min="-1000000.0" prefWidth="120.0" fx:id="xField" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" GridPane.columnIndex="1">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <Label text="Angle" />
                                    <InfoIcon fx:id="angleInfo" />
                                 </children>
                              </HBox>
                              <NumberField fx:id="angleField" ghostText="Angle" max="360.0" prefWidth="120.0" value="270.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <Label text="Zoom Level" />
                                    <InfoIcon fx:id="zoomInfo" />
                                 </children>
                              </HBox>
                              <NumberField fx:id="zoomField" ghostText="Zoom Level" max="1.0E20" min="0.001" prefWidth="120.0" value="1.0" />
                           </children>
                        </VBox>
                     </children>
                  </GridPane>
                  <Button fx:id="recenter" mnemonicParsing="false" onAction="#recenter" text="Recenter" />
               </children>
            </VBox>
            <GridPane hgap="5.0" vgap="5.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <SpringSlider majorTickUnit="0.5" minorTickCount="4" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="xSlider" />
                  <SpringSlider fx:id="ySlider" majorTickUnit="0.5" minorTickCount="4" nodeOrientation="RIGHT_TO_LEFT" orientation="VERTICAL" prefWidth="14.0" />
                  <AnchorPane GridPane.columnIndex="1">
                     <children>
                        <Slider fx:id="angleSlider" layoutX="92.0" max="360.0" orientation="VERTICAL" prefHeight="110.0" AnchorPane.topAnchor="0.0" />
                        <Slider fx:id="zoomSlider" layoutX="99.0" max="1.0E20" min="0.001" orientation="VERTICAL" prefHeight="110.0" value="1.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                        <Label layoutX="7.0" layoutY="14.0" prefHeight="120.0" prefWidth="87.0" text="!TEMPORARY! WE WANT CIRCULAR SLIDERS JONAS!!!" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </GridPane>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.rowIndex="2">
         <children>
            <CheckBox fx:id="showAxes" disable="true" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" text="Show Axes" />
            <CheckBox fx:id="enableProportions" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" selected="true" text="Enable Proportions" />
            <NumberField fx:id="proportionsField" max="1.0" prefWidth="100.0" value="0.5" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>
   </children>
</fx:root>
