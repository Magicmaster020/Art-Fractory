<?xml version="1.0" encoding="UTF-8"?>

<?import com.thefractory.customcomponents.NumberSlider?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<StackPane fx:id="controlPanel" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="5.0">
         <children>
            <NumberSlider fx:id="iterations" intSlider="true" logarithmic="true" max="1000000.0" min="1.0" tip="Number of iterations of the Mandelbrot equation." title="Iterations" />
            <NumberSlider fx:id="power" intSlider="true" tip="Power of the Mandelbrot equation." title="Power" value="2.0" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</StackPane>
