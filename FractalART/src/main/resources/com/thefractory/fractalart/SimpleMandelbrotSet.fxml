<?xml version="1.0" encoding="UTF-8"?>

<?import com.thefractory.customcomponents.GradientPicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="controlPanel" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="5.0">
         <Label prefWidth="500.0" text="Hi and welcome to FractalART pre-alpha verion!" />
         <Label prefWidth="500.0" text="This is a short beginner introduction to FractalART. To your right you have a preview of your current fractal. This is the Mandelbrot Set. Below the Mandelbrot you have the navigation pane. This will help you navigate in the Mandelbrot Set. You can pan, zoom, rotate and crop. This can be done with the various fields and dials or by interacting with the preview." wrapText="true" />
         <Label prefWidth="500.0" text="When you have found a region of the Mandelbrot Set that you like go to File&gt;Export to save your new image." wrapText="true" />
         <Label prefWidth="500.0" text="Have fun and try out as many different types of fractals as you like. More can be found in File&gt;New  Artwork." wrapText="true" />
         <GradientPicker fx:id="gradientPicker" />
         <Button fx:id="exportButton" mnemonicParsing="false" onAction="#export" text="Export" />
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</StackPane>
