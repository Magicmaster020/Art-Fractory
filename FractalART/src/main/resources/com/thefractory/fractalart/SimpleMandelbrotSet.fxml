<?xml version="1.0" encoding="UTF-8"?>

<?import com.thefractory.customcomponents.Gradient?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="controlPanel" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="5.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label minWidth="-Infinity" prefWidth="800.0" text="Hi and welcome to FractalART pre-alpha verion! " wrapText="true" />
                  <Label minWidth="-Infinity" prefWidth="800.0" text="This is a short beginner introduction to FractalART. To your right you have a preview of your current fractal. This is the Mandelbrot Set. Below the Mandelbrot you have the navigation pane. This will help you navigate in the Mandelbrot Set. You can pan, zoom, rotate and crop. This can be done with the various fields and dials or by interacting with the preview." wrapText="true" />
                  <Label minWidth="-Infinity" prefWidth="800.0" text="When you have found a region of the Mandelbrot Set that you like go to File&gt;Export to save your new image." wrapText="true" />
                  <Label minWidth="-Infinity" prefWidth="800.0" text="Have fun and try out as many different types of fractals as you like. More can be found in File&gt;New  Artwork." wrapText="true" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox fx:id="gradients" spacing="3.0">
               <children>
                  <Gradient fx:id="pink" onMouseClicked="#changeGradient">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Gradient>
                  <Gradient gradientLocation="coral" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="sea" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="starry sky" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="forrest" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="fire" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="sunset" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="rainbow" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="rainbow step" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="pale rainbow" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="black and white" onMouseClicked="#changeGradient" />
                  <Gradient gradientLocation="black and white step" onMouseClicked="#changeGradient" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
