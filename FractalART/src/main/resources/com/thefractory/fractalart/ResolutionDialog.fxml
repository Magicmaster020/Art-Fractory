<?xml version="1.0" encoding="UTF-8"?>

<?import com.thefractory.customcomponents.NumberField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox fillWidth="false" spacing="5.0">
         <children>
            <Label text="Select Resolution">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label minHeight="-Infinity" minWidth="-Infinity" prefWidth="36.0" text="Width" />
                  <NumberField fx:id="dialogWidth" ghostText="Image Width" intField="true" max="100000.0" min="1.0" value="1920.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label minHeight="-Infinity" minWidth="-Infinity" text="Height" />
                  <NumberField fx:id="dialogHeight" ghostText="Image Height" intField="true" max="100000.0" min="1.0" value="1080.0" />
               </children>
            </HBox>
            <CheckBox fx:id="preRatio" mnemonicParsing="false" text="Use preview ratio" />
         </children>
      </VBox>
   </content>
   <graphic>
      <ImageView fx:id="preview" fitHeight="143.0" fitWidth="143.0" pickOnBounds="true" preserveRatio="true" />
   </graphic>
</DialogPane>
